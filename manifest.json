{
    "name": "Force merge to master",
    "version": "1.0",
    "description": "Forces a merge commit when merging from staging to master",
    "manifest_version": 2,
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [{
 		"matches": ["https://github.com/*"],
  		"js": ["main.js"],
  		"run_at": "document_end"
 	}],
    "browser_action": {
        "default_icon": {
            "38": "icon-38.png"
        }
    },
    "permissions": [
        "activeTab"
    ]
}
